rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      // Accès restreint aux employés MDJ authentifiés
      allow read, write: if request.auth != null && 
        request.auth.token.email.matches('.*@mdjescalejeunesse[.]ca');
    }
  }
}